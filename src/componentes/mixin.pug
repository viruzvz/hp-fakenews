// card
mixin card(header, name, body)
  .card.rounded-0.mt-4
    .card-header.text-center.p-1.rounded-0.text-uppercase(class=header)
      = name
    .card-body.p-0(class=body)
      if block
        block
      else
        p no content provided
    .card-footer.py-1
      .text-right
        +vermais
// card fotos
mixin itemfoto(src, alt)
  .item
    img.img-fluid(src=src, alt=alt)
// item padr√£o fotos
mixin vermais
  a.link--blue-link(href='#') 
    | Ver mais &nbsp;
    span.size--small.fas.fa-caret-right
// navbar
mixin lidropdown-nav(name)
  li.nav-item.dropdown
    a#navbarDropdown.nav-link.link--dark.dropdown-toggle(href='#', role='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')= name
    .dropdown-menu.rounded-0(aria-labelledby='navbarDropdown')
      a.dropdown-item(href='#') Action
      a.dropdown-item(href='#') Another action
      .dropdown-divider
      a.dropdown-item(href='#') Something else here
      span.sr-only (current)
// li mixins
mixin li-comunicados(date)
